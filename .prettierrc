{
  "singleQuote": true,
  "jsxSingleQuote": false,
  "singleAttributePerLine": true,
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 120,
  "bracketSpacing": true,
  "endOfLine": "auto",
  "arrowParens": "avoid",
  "bracketLine": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": [
    "react",
    "^(@|./)pages/(.*)$",
    "^(@|./)components/(.*)$",
    "^(@|./)hooks/(.*)$",
    "^(@|./)constants/(.*)$",
    "^(@|./)assets/(.*)$",
    "^(@|./)utils/(.*)$",
    "^./(.*)$"
  ]
}
